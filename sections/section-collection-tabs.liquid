{% schema %}
  {
    "name": "Collection Tabs",
    "tag": "section",
    "class": "section section-collection-tabs",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Section Title",
        "default": "<p>Favourite products</p>"
      }, {
        "type": "richtext",
        "id": "description",
        "label": "Section Description",
        "default": "<p>Chose</p>"
      }
    ],
    "max_blocks": 4,
    "blocks": [
      {
        "name": "Collction tab",
        "type": "collection_tab",
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Collection tabs"
      }
    ]
  }
{% endschema %}